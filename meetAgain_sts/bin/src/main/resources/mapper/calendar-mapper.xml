<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="calendarMapper">
	
	<insert id="insertSchedule" parameterType="Calendar">
		INSERT INTO CALENDAR VALUES(#{gid}, #{gdate}, #{ginfo}, #{gtime}, DEFAULT)
	</insert>
	
	<select id="selectCalendar" resultType="Calendar">
		SELECT C.*, TO_CHAR(GTIME, 'HH24:MI') "GTIMESTR" FROM CALENDAR C
	</select>
	
</mapper>